{
  "name": "vk audiopad – VK Музыка без рекламы",
  "description": "Музыкальный плеер для VK Музыки. Слушайте любимую музыку из ВКонтакте без рекламы",
  "author": "Denis Matveev <unsumulum@gmail.com>",
  "version": "3.1.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "commands": {
    "010-play-pause": {
      "description": "Воспроизведение/Пауза",
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "global": true
    },
    "020-previous": {
      "description": "Предыдущий трек",
      "suggested_key": {
        "default": "Ctrl+Shift+6"
      },
      "global": true
    },
    "030-next": {
      "description": "Следующий трек",
      "suggested_key": {
        "default": "Ctrl+Shift+7"
      },
      "global": true
    },
    "050-shuffle": {
      "description": "Слушать в перемешку"
    },
    "060-loop": {
      "description": "Повтор"
    }
  },
  "permissions": [
    "*://*.vk.com/*",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_security_policy": "script-src 'self' blob: 'sha256-eNxq5Q/DLL35v9atnAvyi0ZTn2eGTHLz9gClGr9ADYo=' https://top-fwz1.mail.ru/js/code.js; object-src 'self'"
}
{
  "name": "vk audiopad – VK Музыка без рекламы",
  "description": "Плеер для музыкальной помойки ВКонтакте",
  "author": "Denis Matveev <unsumulum@gmail.com>",
  "version": "3.0.0",
  "version_name": "3.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "permissions": [
    "*://*.vk.com/*",
    "storage",
    "notifications"
  ]
}